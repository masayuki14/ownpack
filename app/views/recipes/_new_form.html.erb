<%= form_for(@recipe, :html => {:class => 'form-horizontal'}) do |f| %>
  <% if @recipe.errors.any? %>
    <div class="alert alert-block alert-error">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h4><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h4>

      <ul>
      <% @recipe.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group<%= @recipe.errors.messages.has_key?(:title) ? ' error' : '' %>">
    <label class="control-label">
      レシピのタイトル
    </label>
    <div class="controls">
      <%= f.text_field :title, placeholder: 'タイトルを入力(20文字)' %>
    </div>
  </div>

  <div class="control-group<%= @recipe.errors.messages.has_key?(:uploaded_picture) ? ' error' : '' %>">
    <label class="control-label">
       完成写真をのせる
    </label>
    <div class="controls">
      <%= f.file_field :uploaded_picture %>
    </div>
  </div>

  <%= f.hidden_field :user_id %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
